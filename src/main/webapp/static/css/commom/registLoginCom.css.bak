.right-content_container
{
    padding-left: 8%;
	padding-top:3%;
}
.right-content_title
{
    font-size: 24px;
    color: #323232;
    font-weight: normal;
}
.right-content_title small
{
    font-size: 24px;
}
.login-form_contianer
{
    margin-top: 20px;
    width: 100%;
}
.login-input_box
{
    position: relative;
    width: 100%;
    height: 35px;
}
.login-input_control
{
    width: 90%;
    height: 34px;
    outline:none;
    border: none;
    color: #323232;
    border-bottom: 1px solid #b6b6b6;
    font-size: 16px;
}
.login-input_control:focus
{
    border-bottom: 2px solid #64b5e3;
}
.login-input_control::-webkit-input-placeholder
{
    font-size: 18px;
    color: #b6b6b6;
}
.remark-p
{
    position: absolute;
    left: 0;
    bottom: -30px;
    line-height: 30px;
    font-size: 14px;
    color: #b6b6b6;
}
.login-apply_btn
{
    position: relative;
    display: inline-block;
    width: 142px;
    height: 62px;
    text-align: center;
    line-height: 62px;
    font-size: 24px;
    color: #FFFFFF;
    border: none;
    outline: none;
    border-radius: 100px;
    background-color: #64b5e3;
    cursor: pointer;
    box-shadow: 6px 6px 14px rgba(0,0,0,.2);
}
.login-apply_btn::before
{
    content: '';
    width: 200%;
    height: 200%;
    position: absolute;
    top: 0;
    left: 0;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    box-sizing: border-box;
}


.login-apply_btn:hover
{
    background-color: #4ca0cc;
}
.login-apply_btn:active
{
    background-color: #4ca0cc;
    box-shadow: 0px 0px 0px rgba(0,0,0,.2);
}
